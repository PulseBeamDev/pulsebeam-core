{
  "name": "@pulsebeam/server",
  "version": "0.0.5",
  "nodeModulesDir": "auto",
  "imports": {
    "wasm-pack": "npm:wasm-pack@^0.13.1"
  },
  "exports": {
    "./deno": "./pkg-deno/pulsebeam_core.js",
    "./node": "./pkg-node/pulsebeam_core.js"
  },
  "tasks": {
    "build:node": "wasm-pack build --target nodejs --out-dir pkg-node --release && rm pkg-node/package.json",
    "build:deno": "wasm-pack build --target deno --out-dir pkg-deno --release",
    "build": "deno run build:node && deno run build:deno",
    "publish": "deno run build && deno publish --allow-slow-types",
    "publish:dry": "deno run build && deno publish --allow-slow-types --dry-run",
    "test": "deno test --allow-read"
  },
  "exclude": [
    "src",
    "tests",
    "examples"
  ],
  "publish": {
    "exclude": [
      "pkg-node/package.json",
      "!pkg-node/",
      "!pkg-deno/"
    ]
  }
}
